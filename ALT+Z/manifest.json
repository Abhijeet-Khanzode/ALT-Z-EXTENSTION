{
  "manifest_version": 3,
  "name": "T-BOT Selector",
  "description": "Select any text and press Ctrl+C to Copy and  Alt+Z to instantly send it to T-BOT (Telegram/WhatsApp bot).",
  "version": "1.0",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://t-bot-luhe.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "send-selection-to-bot": {
      "suggested_key": {
        "default": "Alt+Z",
        "mac": "Command+Z"
      },
      "description": "Send selected text to T-BOT"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon129.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon128.png"
    },
    "default_title": "T-BOT Selector"
  }
}